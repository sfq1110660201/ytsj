  height: 35rpx;
  margin-right: 5rpx;
}
.operation text{
  margin-right: 60rpx;
  font-size: 27rpx;
  color: #999;
  vertical-align: middle
}
.articlesPart{
  background: #fff;
  margin-bottom: 5rpx;
}
.articleCon{
  display:flex;
  justify-content:space-between;
  padding:20rpx 20rpx 20rpx 0;
  margin-left:40rpx;
  align-items:center;
  border-top:1px solid #f0f0f0;
}
.videoL{
  flex: 3;
  flex-direction: column;
  height: 140rpx;
